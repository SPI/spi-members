  function delete_member($db, $email) {
    $sql="SELECT memid FROM members WHERE email='$email'";

    if (! ($query = pg_exec($db, $sql))) {
      echo "<P>Problem with query", pg_errorMessage($db), "<BR>";
      echo "SQL was: $sql<BR>\n";
      return FALSE;
    }
    if (pg_NumRows($query) == 0) {
      echo "<P>No member found with email '$email'<BR>\n";
      return FALSE;
    }
    $row = pg_Fetch_Array($query, 0);
    $memid = $row["memid"];

    $sql = "DELETE FROM applications WHERE member = $memid";
    if (! ($query = pg_exec($db, $sql))) {
      echo "<P>Problem with query", pg_errorMessage($db), "<BR>";
      echo "SQL was: $sql<BR>\n";
      return FALSE;
    }
    $sql = "DELETE FROM members WHERE memid = $memid";
    if (! ($query = pg_exec($db, $sql))) {
      echo "<P>Problem with query", pg_errorMessage($db), "<BR>";
      echo "SQL was: $sql<BR>\n";
      return FALSE;
    }

    return TRUE;
  }
